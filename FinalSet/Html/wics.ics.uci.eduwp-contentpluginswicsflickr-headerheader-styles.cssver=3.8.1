
div.flickr-header {
  position:relative;
  overflow:hidden;
}
div.flickr-header img {
  position:absolute;
  z-index:1;
}
div.flickr-header a.attribution {
  position:absolute;
  right:0;
  bottom:0;
  opacity: 0.6;
  background: #000;
  color: #FFF;
  font-size: 11px;
  padding: 5px 25px;
  z-index:2;
}

div.flickr-header a.attribution:hover {
  opacity: 0.8;
}

